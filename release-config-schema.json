{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Release Config",
    "description": "Contains the release configuration for 51Degrees DevOps pipelines",
    "properties": {
        "repositories": {
            "type": "object",
            "patternProperties": {
                "^[A-Za-z][A-Za-z0-9\\-]*$": {
                    "type": "object",
                    "properties": {
                        "version": {
                            "type": "string",
                            "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
                        },
                        "packageName": {
                            "type": "string"
                        },
                        "versionVariableName": {
                            "type": "string"
                        },
                        "isLeaf": {
                            "type": "boolean"
                        },
                        "dependencies": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "pattern": "^[A-Za-z][A-Za-z0-9\\-]*$"
                            }
                        }
                    },
                    "required": [
                        "version",
                        "isLeaf"
                    ]
                }
            },
            "required": [
                "common-ci"
            ]
        },
        "approvalRequired": {
            "type": "boolean"
        }
    },
    "required": [
        "repositories",
        "approvalRequired"
    ]
}